<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-8 offset-2">

    <h3 class="mb-4">Create a New Listing</h3>

    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">

      <!-- Title -->
      <div class="mb-3">
        <label class="form-label">Title</label>
        <input 
          name="listing[title]" 
          type="text" 
          class="form-control"
          placeholder="Add a catchy title"
          required>
        <div class="valid-feedback">Looks good!</div>
      </div>

      <!-- Description -->
      <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea 
          name="listing[description]" 
          class="form-control"
          required></textarea>
        <div class="invalid-feedback">Please enter description</div>
      </div>

      <!-- Image -->
       <div class="mb-3">
        <label class="form-label">Upload Listing Image </label>
        <input 
          name="listing[image]" 
          type="file" 
          class="form-control"
          />
          required
      </div>

      <!-- Price + Country -->
      <div class="row">
        <div class="col-md-6 mb-3">
          <label class="form-label">Price</label>
          <input 
            name="listing[price]" 
            type="number" 
            class="form-control"
            placeholder="Enter price"
            required>
          <div class="invalid-feedback">Enter valid price</div>
        </div>

        <div class="col-md-6 mb-3">
          <label class="form-label">Country</label>
          <input 
            name="listing[country]" 
            type="text" 
            class="form-control"
            placeholder="India"
            required>
          <div class="invalid-feedback">Enter valid country</div>
        </div>
      </div>

      <!-- Location -->
      <div class="mb-3">
        <label class="form-label">Location</label>
        <input 
          name="listing[location]" 
          type="text" 
          class="form-control"
          placeholder="Jaipur, Rajasthan"
          required>
        <div class="invalid-feedback">Enter location</div>
      </div>

      <!-- Button -->
      <button class="btn btn-dark mt-3">Add Listing</button>

    </form>
  </div>
</div>
